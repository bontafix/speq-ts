{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "../../src/**/*"],
  "exclude": ["node_modules", "dist"]
}
