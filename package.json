{
  "name": "speq-ts",
  "version": "1.0.0",
  "description": "",
  "main": "dist/cli/index.js",
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && npm run api:build && npm run webapp:build",
    "start": "ts-node src/cli/index.ts",
    "bot": "ts-node src/telegram/index.ts",
    "bot:dev": "nodemon --watch src --ext ts --signal SIGTERM --exec \"ts-node src/telegram/index.ts\"",
    "api": "ts-node src/api/server.ts",
    "api:dev": "nodemon --watch src/api --watch src --ext ts --signal SIGTERM --exec \"ts-node src/api/server.ts\"",
    "api:build": "tsc",
    "webapp:dev": "cd webapp/frontend && npm run dev",
    "webapp:build": "cd webapp/frontend && npm run build",
    "dev": "concurrently \"npm run api:dev\" \"npm run bot:dev\"",
    "dev:all": "concurrently \"npm run api:dev\" \"npm run bot:dev\" \"npm run webapp:dev\"",
    "pm2:dev": "pm2 start bot.config.js --only speq-api-dev,speq-bot-dev",
    "pm2:staging": "npm run build && pm2 start bot.config.js --only speq-api-staging",
    "pm2:prod": "npm run build && pm2 start bot.config.js --only speq-api-prod",
    "pm2:restart:prod": "npm run build && pm2 restart speq-api-prod",
    "pm2:restart:staging": "npm run build && pm2 restart speq-api-staging",
    "pm2:stop": "pm2 stop all",
    "pm2:logs": "pm2 logs",
    "pm2:delete": "pm2 delete all",
    "embed:equipment": "ts-node src/worker/embed-equipment.ts",
    "analyze:parameters": "ts-node src/scripts/analyze-parameters.ts",
    "generate:dictionary": "ts-node src/scripts/generate-dictionary.ts",
    "normalize:parameters": "ts-node src/scripts/normalize-parameters.ts",
    "resize:images": "ts-node src/scripts/resize-images.ts",
    "webhook:set": "ts-node src/scripts/webhook.ts set",
    "webhook:delete": "ts-node src/scripts/webhook.ts delete",
    "webhook:info": "ts-node src/scripts/webhook.ts info",
    "webhook:set:prod": "NODE_ENV=production ts-node src/scripts/webhook.ts set",
    "webhook:delete:prod": "NODE_ENV=production ts-node src/scripts/webhook.ts delete",
    "webhook:info:prod": "NODE_ENV=production ts-node src/scripts/webhook.ts info",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bontafix/speq-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/bontafix/speq-ts/issues"
  },
  "homepage": "https://github.com/bontafix/speq-ts#readme",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.0",
    "fs-extra": "^11.3.3",
    "groq-sdk": "^0.3.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "sharp": "^0.34.5",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-postgres": "^0.6.2",
    "@types/bcrypt": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "pino-pretty": "^11.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
